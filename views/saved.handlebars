<!--Saved Articles Page-->

<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if articles}}
        {{#each articles}}
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>{{this.title}}</h2>
            </div>
            <div class="panel-body">
                <h4>
                    {{sumary}}
                </h4>
                <a href='https://www.popularmechanics.com/technology/{{link}}'>Read more...</a>

            <button type="button" class="btn btn-success pull-right add-note" data-id={{this._id}}>Add a Note </button>
            <button type="button" class="btn btn-danger pull-right delete-article" data-id={{this._id}}>Delete Article</button>
        </div>


        {{!-- {{#if notes}} --}}
        {{!-- <div class="panel panel-info"> --}}
        {{!-- <div class="panel-heading">
                <h2>{{this.title}}</h2>
            </div> --}}

        {{!-- </div> --}}
        {{!-- {{/if}} --}}




    </div>




    {{/each}}
    {{else}}
    <div class="panel panel-danger">
        <div class="panel-body">
            <h4>You have no saved articles.</h4>
        </div>
    </div>
    {{/if}}
</div>
</div>

